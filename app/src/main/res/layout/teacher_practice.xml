<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pattern_2_158dp"
        android:orientation="vertical"
        android:padding="15dp"
        >





        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="100dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_lifeline_48dp"


            />


        <android.support.v7.widget.CardView
            android:id="@+id/cardTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"


            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_proged_pic_teacher_female_64dp"


                />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"

            >


            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="60dp"
                    android:gravity="center_horizontal"

                    >




                <ImageView
                    android:id="@+id/badege06"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_badge06_24dp"

                    />

                <ImageView
                    android:id="@+id/badege05"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toEndOf="@+id/badege06"
                    android:background="@drawable/ic_badge05_24dp"

                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="50dp"

                >




                <TextView
                    android:id="@+id/dimple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dimple G"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/six2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VI TH C"
                    android:layout_below="@+id/dimple"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"


                >




                <TextView
                    android:id="@+id/coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4825"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/coin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Points)"
                    android:layout_below="@+id/coin"
                    android:textColor="@color/white"

                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"


                >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_coins_24dp"

                />



            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>