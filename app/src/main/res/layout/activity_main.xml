<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93f77d"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.grademojo.frontpage.MainActivity">




        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/splash_app_logo_tagline"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="Login"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"



            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT"
            android:textColor="#c7c6c6"
            />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="25dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >


                <android.support.v7.widget.CardView
                    android:id="@+id/cardStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="40dp"

                    >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/avatar_student"
                    />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="STUDENT"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

                <android.support.v7.widget.CardView
                    android:id="@+id/cardTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="32dp"
                    >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/avatar_teacher"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="STUDENT"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >


            <android.support.v7.widget.CardView
                android:id="@+id/cardParent"
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                app:cardCornerRadius="32dp"

                >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/avatar_parent"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="STUDENT"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                />

        </LinearLayout>


    </LinearLayout>


    </LinearLayout>
