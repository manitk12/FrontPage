<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/blue"
        app:cardElevation="@dimen/activity_horizontal_card_elevator"
        app:cardMaxElevation="@dimen/activity_horizontal_card_elevator"
        app:cardPreventCornerOverlap="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30dp"
            android:background="@color/yellow"
            android:gravity="center"


            >


            <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:cardElevation="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/blue"

                >

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/classes"
                    android:padding="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"



                    >

                </Spinner>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/blue"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/subject"





                    >

                </Spinner>

            </android.support.v7.widget.CardView>



        </LinearLayout>


    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Type"

            />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:entries="@array/subject"

            >


        </Spinner>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_mode_edit_black_18dp"
        />


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xml_blue_bg"
        app:cardElevation="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"

        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="top"
            android:hint="Start Typing...."
            android:textSize="16dp"
            android:background="#00000000"
            />

    </android.support.v7.widget.CardView>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_image_black_24dp"
        />



    <android.support.v7.widget.CardView
        android:id="@+id/cardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/blue"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text="LOGIN"
            android:layout_marginStart="5dp"
            android:gravity="center"
            >

        </TextView>

    </android.support.v7.widget.CardView>

</LinearLayout>