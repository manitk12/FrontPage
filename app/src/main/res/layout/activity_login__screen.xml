<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.grademojo.frontpage.Login_Screen">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:src="@drawable/class_room"
            android:layout_alignParentTop="true"
            android:alpha="0.6"
            />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                >


                <TextView
                    android:id="@+id/login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textAllCaps="true"
                    android:textColor="@color/grey"
                    android:layout_marginStart="70dp"

                    />
        
        
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_below="@+id/login_text"
                    android:layout_alignStart="@+id/login_text"
                    android:layout_alignEnd="@+id/login_text"
                    android:background="@color/grey"

                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="sign up"
                    android:layout_toEndOf="@+id/login_text"
                    android:layout_marginStart="30dp"


                    />



                <android.support.v7.widget.CardView
                    android:id="@+id/cardTeacher1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:background="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="30dp"
                    android:paddingTop="20dp"


                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:background="@color/white"


                        >

                        <TextView
                            android:id="@+id/email_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email"
                            android:textColor="#8f8c8c"
                            android:textAllCaps="true"


                            android:layout_marginStart="20dp"
                            />



                        <EditText
                            android:id="@+id/email_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text|textEmailSubject"

                            android:textSize="14sp"
                            android:layout_marginTop="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="#00000000"


                            />

                        <View
                           android:id="@+id/email_edit_text_view"
                           android:layout_width="wrap_content"
                           android:layout_height="1dp"
                           android:layout_below="@+id/email_edit_text"
                           android:layout_alignStart="@+id/email_edit_text"
                           android:layout_alignEnd="@+id/email_edit_text"
                           android:background="#8f8c8c"

                            />





                        <TextView
                            android:id="@+id/pass_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="password"
                            android:textColor="#8f8c8c"
                            android:textAllCaps="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/email_edit_text_view"


                            />



                        <EditText
                            android:id="@+id/pass_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pass_text"
                            android:inputType="textPassword"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="#00000000"


                            />

                        <View
                            android:id="@+id/pass_edit_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_below="@+id/pass_edit_text"
                            android:layout_alignStart="@+id/pass_edit_text"
                            android:layout_alignEnd="@+id/pass_edit_text"
                            android:background="#8f8c8c"

                            />


                        <TextView
                            android:id="@+id/forget_password_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="forget password...?"
                            android:textSize="12sp"
                            android:textColor="#8f8c8c"
                            android:textAllCaps="true"
                            android:layout_below="@+id/pass_edit_text_view"
                            android:layout_alignEnd="@+id/pass_edit_text_view"
                            android:layout_marginTop="10dp"


                            />
                
                
                        <ImageView
                            android:id="@+id/image_view_facebook"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/facebook"
                            android:layout_below="@+id/forget_password_text_view"
                            android:layout_alignStart="@+id/pass_edit_text_view"

                            />

                        <ImageView
                            android:id="@+id/image_view_gmail"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/googlef"
                            android:layout_below="@+id/forget_password_text_view"
                           android:layout_toEndOf="@+id/image_view_facebook"
                            android:layout_marginStart="5dp"
                            />





                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:src="@drawable/arrow"
                            android:padding="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/forget_password_text_view"
                            android:layout_alignEnd="@id/forget_password_text_view"
                            android:background="@drawable/xml_white_bg"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            />





                



                    </RelativeLayout>




                </android.support.v7.widget.CardView>





            </RelativeLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >


                    <TextView
                        android:id="@+id/student_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="teacher"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="10dp"
                        />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="35dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"

                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/teacher"

                            />

                    </android.support.v7.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:id="@+id/teacher_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="student"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="10dp"
                        />


                    <android.support.v7.widget.CardView
                        android:id="@+id/cardTeacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="35dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"

                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/student"
                            />

                    </android.support.v7.widget.CardView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="10dp"

                    >


                    <TextView
                        android:id="@+id/parent_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="parent"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="@color/grey"
                        android:layout_marginBottom="10dp"
                        />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardParent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="35dp"

                        android:layout_gravity="center"
                        android:layout_margin="1dp"

                        >


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/parents"

                            />

                    </android.support.v7.widget.CardView>



                </LinearLayout>

            </LinearLayout>



        </LinearLayout>








    </RelativeLayout>




</LinearLayout>










