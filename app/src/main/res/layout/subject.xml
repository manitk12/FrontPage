<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">


    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="#dc5800"
        android:layout_margin="20dp"

        />


    <android.support.v7.widget.CardView
        android:id="@+id/cardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="VI C"
                    android:textStyle="bold"
                    android:textColor="@color/grey"

                    />

                <View
                    android:id="@+id/line"
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/six"
                    android:layout_alignBottom="@+id/six"
                    android:layout_toEndOf="@+id/six"
                    android:background="@color/grey"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="20dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLASS"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:layout_toEndOf="@+id/line"
                    android:layout_marginEnd="10dp"

                    />


            </RelativeLayout>


        </LinearLayout>


        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardStudent_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/white"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"



            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/six_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="SCIENCE"
                    android:textStyle="bold"
                    android:textColor="@color/grey"

                    />

                <View
                    android:id="@+id/line11"
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/six_class"
                    android:layout_alignBottom="@+id/six_class"
                    android:layout_toEndOf="@+id/six_class"
                    android:background="@color/grey"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="20dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLASS"
                    android:layout_toEndOf="@+id/line11"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/grey"

                    />
            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/blue"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Done"

            />


    </android.support.v7.widget.CardView>






</LinearLayout>