<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#66bb68"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"

        >



    <ImageView
        android:id="@+id/grade"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/grage"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/grade_mojo"
        android:layout_alignParentStart="true"
         />



        <TextView
            android:id="@+id/grade_mojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="grade mojo"
            android:textSize="30dp"
            android:textAllCaps="true"
            android:layout_toEndOf="@+id/grade"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_toEndOf="@+id/grade"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/grade_mojo"
            android:text="The Classroom Assistant"

            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/xml_white_bg"
         >

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >


            <ImageView
                android:id="@+id/icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_proged_user_1797c8_18dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:layout_gravity="center"
                 />





            <View
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:background="#2896ba"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_alignTop="@+id/icon"
                android:layout_alignBottom="@+id/icon"
                android:layout_toEndOf="@+id/icon"
                android:layout_gravity="center"
                />


        </RelativeLayout>

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="@string/user"
            android:textSize="16dp"

            android:textColorHint="#b1b0b0"
            android:background="#00000000"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/xml_white_bg"
        android:layout_marginTop="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            >


            <ImageView
                android:id="@+id/pass"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_proged_password_1797c8_18dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:layout_gravity="center"
                />





            <View
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:background="#2896ba"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_alignTop="@+id/pass"
                android:layout_alignBottom="@+id/pass"
                android:layout_toEndOf="@+id/pass"
                android:layout_gravity="center"
                />


        </RelativeLayout>

        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="@string/hint"
            android:textSize="16dp"

            android:textColorHint="#b1b0b0"
            android:background="#00000000"
            />



    </LinearLayout>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Forget Password?"
            android:layout_marginTop="15dp"

            />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/forget"
            android:background="@color/white"
            android:layout_alignStart="@id/forget"
            android:layout_alignEnd="@id/forget"
            android:layout_marginBottom="10dp"
            />



    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"

        app:cardElevation="10dp"

        app:cardBackgroundColor="@color/blue"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:layout_gravity="start"
            android:text="LOGIN"
            android:layout_marginStart="5dp"

            android:gravity="center"
            >

        </TextView>

    </android.support.v7.widget.CardView>

</LinearLayout>