<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/xml_white_bg"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_proged_user_1797c8_18dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"

            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="#2896ba"
            android:layout_gravity="center"
            >

        </View>


        <EditText
            android:layout_width="150dp"
            android:hint="@string/user"
            android:background="#00000000"
            android:layout_height="40dp"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@drawable/xml_white_bg"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_proged_password_1797c8_18dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"

            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="#2896ba"
            android:layout_gravity="center"
            >

        </View>


        <EditText
            android:layout_width="150dp"
            android:hint="@string/hint"
            android:background="#00000000"
            android:layout_height="40dp" />



    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Forget Password?"
            android:layout_marginTop="15dp"

            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/forget"
            android:background="@color/white"
            android:layout_alignStart="@id/forget"
            android:layout_alignEnd="@id/forget"
            >

        </View>

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/blue"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="15dp"
            android:text="LOGIN"
            android:layout_marginStart="5dp"
            android:gravity="center"


            >

        </TextView>

    </android.support.v7.widget.CardView>

</LinearLayout>